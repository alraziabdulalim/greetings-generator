{
    "name": "alraziabdulalim/greetings-generator",
    "description": "This is a random greeting generator.",
    "keywords": [
        "alraziabdulalim",
        "greetings-generator"
    ],
    "homepage": "https://github.com/alraziabdulalim/greetings-generator",
    "license": "MIT",
    "authors": [
        {
            "name": "Al Razi Abdul Alim",
            "email": "abdulalimpvt@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.3",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Alraziabdulalim\\GreetingsGenerator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alraziabdulalim\\GreetingsGenerator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
            "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
